<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_fichecomptable_document">
			<t t-call="notaire.external_layout_c">
				<div class="page">
					<div class="oe_structure" />
					<div class="col-xs-6 col-xs-offset-4">
						<div class="row mt4 mb4">
							<h2 style="color:blue;">
								Fiche Comptable
							</h2>
						</div>
					</div>
					<div class="row">
						<table class="table table-condensed">
							<tr>
								<td>
									<div class="col-xs-6 col-xs-offset-1">
										<span t-if="o.date_order">
											<strong>Vendeur:</strong>
										</span>
										<span t-field="o.seller_id.name" />
									</div>
									<div class="col-xs-6 col-xs-offset-1">
										<span t-if="o.date_order">
											<strong>N° CIN OU RC:</strong>
										</span>
										<span t-field="o.seller_id.cin" />
									</div>
									<div class="col-xs-6 col-xs-offset-1">
										<span t-if="o.date_order">
											<strong>Acquéreur:</strong>
										</span>
										<span t-field="o.partner_invoice_id.name" />
									</div>
									<div class="col-xs-6 col-xs-offset-1">
										<span t-if="o.date_order">
											<strong>N° CIN OU RC:</strong>
										</span>
										<span t-field="o.partner_invoice_id.cin" />
									</div>
									<div class="col-xs-6 col-xs-offset-1">
										<span t-if="o.nature_acte">
											<strong>Nature de l'acte:</strong>
										</span>
										<span t-field="o.nature_acte" />
									</div>
									<div class="col-xs-6 col-xs-offset-1">
										<span t-if="o.type_bien">
											<strong>Type de Bien:</strong>
										</span>
										<span t-field="o.type_bien" />
									</div>
									<div class="col-xs-6 col-xs-offset-1">
										<span t-if="o.date_signature">
											<strong>Date de Signature:</strong>
										</span>
										<span t-field="o.date_signature" />
									</div>
								</td>
								<td style="padding-left: 8px;">
									<div class="col-xs-6 col-xs-offset-4">
										<span t-if="o.name">
											<strong>Ref Affaire:</strong>
										</span>
										<span t-field="o.name" />
									</div>
									<div class="col-xs-6 col-xs-offset-4">
										<span t-if="o.client_order_ref">
											<strong>Répertoire N°:</strong>
										</span>
										<span t-field="o.client_order_ref" />
									</div>
									<div class="col-xs-6 col-xs-offset-4">
										<span t-if="o.price_sell">
											<strong>Prix de Vente:</strong>
										</span>
										<span t-field="o.price_sell" />
									</div>
									<div class="col-xs-6 col-xs-offset-4">
										<span t-if="o.loan_amount">
											<strong>Montant Prêt:</strong>
										</span>
										<span t-field="o.loan_amount" />
									</div>
									<div class="col-xs-6 col-xs-offset-4">
										<span t-if="o.bank">
											<strong>Banque:</strong>
										</span>
										<span t-field="o.bank.name" />
									</div>
									<div class="col-xs-6 col-xs-offset-4">
										<span t-if="o.tf_mee">
											<strong>T. Foncier N°:</strong>
										</span>
										<span t-field="o.tf_mee" />
									</div>
								</td>
							</tr>
						</table>
					</div>
					<table class="table table-condensed">
						<thead>
							<tr>
								<th>Date</th>
								<th>Description</th>
								<th>Compte</th>
								<th>N° de Chèque</th>
								<th
									style="border-left:2px solid #0B198C; border-top:2px solid #0B198C; font:Arial, Helvetica, sans-serif; font-weight:bold; color:#FFFFFF; padding-left:15; border-bottom:2px solid #0B198C; background-color:#7B869A">C.Frais Recettes</th>
								<th
									style="border-right:2px solid #0B198C; border-top:2px solid #0B198C; font:Arial, Helvetica, sans-serif; font-weight:bold; color:#FFFFFF; padding-left:15; border-bottom:2px solid #0B198C; background-color:#7B869A">C.Frais Dépences</th>
								<th
									style="border-left:2px solid #2E2E1F; border-top:2px solid #2E2E1F; font:Arial, Helvetica, sans-serif; font-weight:bold; color:#FFFFFF; padding-left:15; border-bottom:2px solid #2E2E1F; background-color:#999966">C.Fonds Recettes</th>
								<th
									style="border-right:2px solid #2E2E1F; border-top:2px solid #2E2E1F; font:Arial, Helvetica, sans-serif; font-weight:bold; color:#FFFFFF; padding-left:15; border-bottom:2px solid #2E2E1F; background-color:#999966">C.Fonds Dépences</th>
							</tr>
						</thead>
						<tbody class="sale_tbody">
							<tr t-foreach="o.transaction_ids" t-as="l">
								<td>
									<span t-field="l.date_transaction" />
								</td>
								<td>
									<span t-field="l.name" />
								</td>
								<td>
									<span t-field="l.Bank" />
								</td>
								<td>
									<span t-field="l.Num_Cheque" />
								</td>
								<td style="background-color:#7B869A">
									<span t-field="l.CFrais_Recettes" />
								</td>
								<td style="background-color:#7B869A">
									<span t-field="l.CFrais_Depenses" />
								</td>
								<td style="background-color:#999966">
									<span t-field="l.CFonds_Recettes" />
								</td>
								<td style="background-color:#999966">
									<span t-field="l.CFonds_Depenses" />
								</td>
							</tr>
							<tr>
								<td style="background-color:#e566ff"></td>
								<td style="background-color:#e566ff"></td>
								<td style="background-color:#e566ff"></td>
								<td
									style="font:Arial, Helvetica, sans-serif; font-weight:bold; color:#000000; padding-left:30; background-color:#e566ff">
									<span> Total : </span>
								</td>
								<td
									style="font:Arial, Helvetica, sans-serif; font-weight:bold; color:#000000;">
									<span t-field="o.sum_CFrais_Recettes" />
								</td>
								<td
									style="font:Arial, Helvetica, sans-serif; font-weight:bold; color:#000000">
									<span t-field="o.sum_CFrais_Depenses" />
								</td>
								<td
									style="font:Arial, Helvetica, sans-serif; font-weight:bold; color:#000000">
									<span t-field="o.sum_CFonds_Recettes" />
								</td>
								<td
									style="font:Arial, Helvetica, sans-serif; font-weight:bold; color:#000000">
									<span t-field="o.sum_CFonds_Depenses" />
								</td>
							</tr>
							<tr>
								<td style="background-color:#e566ff"></td>
								<td style="background-color:#e566ff"></td>
								<td style="background-color:#e566ff"></td>
								<td
									style="font:Arial, Helvetica, sans-serif; font-weight:bold; color:#000000; padding-left:22; background-color:#e566ff">
									<span> Recettes-Depenses : </span>
								</td>
								<td class="text-right"
									style="font:Arial, Helvetica, sans-serif; font-weight:bold; color:#000000">
									<span t-field="o.frais_ecart" />
								</td>
								<td>
								</td>
								<td class="text-right"
									style="font:Arial, Helvetica, sans-serif; font-weight:bold; color:#000000">
									<span t-field="o.fond_ecart" />
								</td>
								<td>
								</td>
							</tr>
						</tbody>
					</table>
					<div class="oe_structure" />
				</div>
			</t>
		</template>

		<template id="external_layout_c">
			<!-- Multicompany -->
			<t t-if="o and 'company_id' in o">
				<t t-set="company" t-value="o.company_id">
				</t>
			</t>
			<t t-if="not o or not 'company_id' in o">
				<t t-set="company" t-value="res_company">
				</t>
			</t>

			<t t-call="notaire.external_layout_head" />
			<t t-raw="0" />
			<t t-call="report.external_layout_footer" />
		</template>

		<template id="external_layout_head">
			<div class="header">
				<div class="row">
					<div class="col-xs-3">
						<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
							style="max-height:
                            45px;" />
					</div>
					<div class="col-xs-9 text-right" style="margin-top:20px;"
						t-field="company.rml_header1" />
				</div>
				<!-- <div class="row zero_min_height"> <div class="col-xs-12"> <div style="border-bottom: 
					1px solid black;"> </div> </div> </div> -->
				<!-- I deleted the company contact -->
			</div>
		</template>

		<template id="report_fichecomptable">
			<t t-call="report.html_container">
				<t t-foreach="doc_ids" t-as="doc_id">
					<t
						t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'notaire.report_fichecomptable_document')" />
				</t>
			</t>
		</template>
	</data>
</openerp>
